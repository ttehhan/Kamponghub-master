<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_shop_profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/arnold"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20sp"
            android:text="ABC123" />

            <TextView
                android:id="@+id/list_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="20sp"
                android:text="17 March 2018 10am" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_msg_content"
                android:layout_width="228dp"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:maxLines="2"
                android:text="msg content blah blah blah blah" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:src="@drawable/blue_arrow_right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
